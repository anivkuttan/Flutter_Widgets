import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      theme: ThemeData(primarySwatch: Colors.orange),
      home: MyWidget(),
    );
  }
}

class MyWidget extends StatefulWidget {
  @override
  _MyWidgetState createState() => _MyWidgetState();
}

class _MyWidgetState extends State<MyWidget> {
  @override
  Widget build(BuildContext context) {
    return DefaultTabController(
      length: 3,
      child: Scaffold(
        appBar: AppBar(
          title: Text("Stack"),
          bottom: TabBar(tabs: [
            Tab(text: "Stack"),
            Tab(text: "Stack align"),
            Tab(text: "Stack position")
          ]), //tabbar
        ), //appba
        body: TabBarView(children: [
          stackTab(),
          firstTab("Second child"),
          firstTab("thired child"),
        ]),
      ), //scaffold
    );
  }
}

Widget firstTab(String data) {
  return Center(child: Text(data));
}

Widget stackTab() {
  return Padding(
    padding: EdgeInsets.all(50.0),
    child: Stack(children: [
      Container(height: 800, width: 400, color: Colors.orange),
      Container(height: 600, width: 300, color: Colors.blue),
      Align(
        alignment: Alignment.bottomRight,
        child: Container(height: 400, width: 200, color: Colors.pink), //child
      ), //align
      Positioned(
        top: 20,
        left: 30,
        child: Container(
            color: Colors.yellow, width: 150, height: 150), //container
      ), //position
    ]),
  );
}
