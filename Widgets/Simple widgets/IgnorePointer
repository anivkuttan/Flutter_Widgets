import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: MyWidget(),
    );
  }
}

class MyWidget extends StatefulWidget {
  @override
  _MyWidgetState createState() => _MyWidgetState();
}

class _MyWidgetState extends State<MyWidget> {
  int counter = 0;
  String pressing = '';
  bool isIgnore = false;
  @override
  Widget build(BuildContext context) {
    return Scaffold(
        appBar: AppBar(
          title: Text("AppBar"),
          leading: IconButton(
              icon: Icon(Icons.android),
              onPressed: () {
                setState(() {
                  isIgnore = !isIgnore;
                });
              }),
        ), //appbar
        body: Center(
            child: Column(children: [
          Text('$pressing : $counter',
              style: TextStyle(fontSize: 30, color: Colors.red)),
          ElevatedButton(
              onPressed: () {
                setState(() {
                  pressing = '1 st button';
                  counter = ++counter;
                });
              },
              child: Text('Clickable')), //button
          IgnorePointer(
            ignoring: isIgnore,
            child: ElevatedButton(
                child: Text("ingnore botton"),
                onPressed: () {
                  setState(() {
                    pressing = '2 nd button';
                    counter += 10;
                  });
                }), //buyton
          ), //pointer
          Container(
            height: 700,
            width: 500,
            color: Colors.grey,
            child: Stack(children: [
              Positioned(
                top: 200,
                left: 200,
                child: InkWell(
                  onTap: () {
                    setState(() {
                      pressing = 'Pink pressed';
                      ++counter;
                    });
                  },
                  child: Container(
                    color: Colors.pink,
                    height: 350,
                    width: 250,
                  ), //inkwell
                ), //positioned
              ), //inkwell
              Positioned(
                top: 350, left: 250,
                child: AbsorbPointer
                   // IgnorePointer
                (
                  absorbing: true,
                 // ignoring: true,
                  child: InkWell(
                    onTap: () {
                      setState(() {
                        pressing = 'purple pressed';
                        ++counter;
                      });
                    },
                    child: Container(
                        color: Colors.deepPurple, height: 200, width: 200),
                  ), //inkwell
                ), //absorbpointer
              ), //positioned
            ]), //stack
          ), //container
        ]) //column
            ) //center
        );
  }
}
