import 'package:flutter/material.dart';

void main() => runApp(MaterialApp(home: MyApp()));

class MyApp extends StatefulWidget {
  @override
  _MyAppState createState() => _MyAppState();
}

class _MyAppState extends State<MyApp> {
  String textValue = 'Drag Hear';
  void dragStarted() {
    final _snackBar = SnackBar(
        content: Text('On Dragging........'),
        duration: Duration(seconds: 1),
        shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(20)));
    ScaffoldMessenger.of(context).showSnackBar(_snackBar);
  }

  void dragCompleted() {
    final _snackBar = SnackBar(
        content: Text('Drag Completed Done.....'),
        duration: Duration(seconds: 1),
        shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(20)));
    ScaffoldMessenger.of(context).showSnackBar(_snackBar);
  }

  @override
  Widget build(BuildContext context) {
    Widget containerOrange = Container(color:Colors.orange, height:100,width:100,alignment :Alignment.center, child:Text('Ani',style:TextStyle (fontSize :30, color :Colors.white ),  ), ) ;
    return Scaffold(
      appBar: AppBar(
        title: Text('AppBar'),
      ), //appabr
      body: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Draggable(
            data: 'Ani',
            feedback: containerOrange,
            child:containerOrange, 
            childWhenDragging: Container(height:100), 
             
    
          onDragStarted: dragStarted,
            onDragCompleted: dragCompleted,
          ),
          SizedBox(height: 200),
          Row(
            mainAxisAlignment: MainAxisAlignment.spaceEvenly,
            children: [
              DragTarget(
                builder: (context, allowedData, rejectedData) {
                  return Container(
                    height: 100,
                    width: 100,
                    alignment: Alignment.center,
                    color: Colors.purple,
                    child: Text(
                      textValue,
                      style: TextStyle(fontSize: 20, color: Colors.black),
                    ),
                  );
                },
                onAccept: (data) {
                  if (data == 'Ani') {
                    return setState(() {
                      textValue = 'Ani';
                    });
                  }
                },
              )
            ],
          )
        ],
      ),
    );
  }
}
