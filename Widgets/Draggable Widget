import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: MyWidget(),
    );
  }
}

class MyWidget extends StatefulWidget {
  @override
  _MyWidgetState createState() => _MyWidgetState();
}

class _MyWidgetState extends State<MyWidget> {
  String text = 'AppBar';
  void dragging() {
    setState(() {
      text = 'Dragging.... ';
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text(text),
      ), //appbar
      body: Column(mainAxisAlignment: MainAxisAlignment.center, children: [
        Center(
          child: Draggable(
              data: 'Ani',
              onDragStarted: dragging,
              //axis:Axis.horizontal,
              child: Container(
                height: 50,
                width: 50,
                color: Colors.blue,
                alignment: Alignment.center,
                child: Text(
                  '5',
                  style:
                      TextStyle(fontSize: 20, color: Colors.white), //textStyle
                ), //child container
              ), //container
              feedback: Container(
                height: 50,
                width: 50,
                color: Colors.green,
                alignment: Alignment.center,
                child: Text('5',
                    style:
                        TextStyle(fontSize: 20, color: Colors.white) //textStyle
                    ), //child container
              ), //feedback container

              childWhenDragging:
                  Container(color: Colors.purple, height: 50, width: 50)), //drg
        ), //cente
        SizedBox(height: 300),
        Row(mainAxisAlignment: MainAxisAlignment.spaceEvenly, children: [
          Container(
              color: Colors.green,
              height: 100,
              width: 100,
              child: DragTarget(
                onWillAccept:(deta) {
return true;
                } , builder: (context, allowedData, rejectedData) {
                  return Center(
                  child: Text('5',
                      style: TextStyle(fontSize: 20, color: Colors.white)),
                ); //center
              }, //builder
                  onAccept: (data) {
                if (data == 'Ani') {
                  setState(() {
                    text = 'Accepted';
                  });
                } else {
                  setState(() {
                    text = 'Rejected from green';
                  });
                }
              } //onAccept
                  ) //tragtarge[
              ), //green container
          Container(color: Colors.red, height: 100, width: 100)
        ]), //row
      ]), //column
    );
  }
}
