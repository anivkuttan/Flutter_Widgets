import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: MyWidget(),
    );
  }
}

class MyWidget extends StatefulWidget {
  @override
  _MyWidgetState createState() => _MyWidgetState();
}

class _MyWidgetState extends State<MyWidget> {
  final GlobalKey<AnimatedListState> _key = GlobalKey() ;
  List<String> nameList = [
'Anikuttan',
    'Iyappan',
    'ArunSelvam',
    'Baskar',
    'Sabarish', 
  ] ;
  @override
  Widget build(BuildContext context) {
    return Scaffold(
        appBar: AppBar(
          title: Text("AppBar"),
        ), //appbar
        body: Center(
    child:AnimatedList(
    key:_key ,
      initialItemCount:nameList.length, 
      scrollDirection :Axis.vertical,
     itemBuilder:(context, index, animation) {
return _itembuilder(context, nameList[index],animation) ;
     }, 
    ), //list
    ) , //center
        );
  }
  Widget _itembuilder(BuildContext context, String name, Animation<double> animation ) {
return SizeTransition(
sizeFactor:animation,
child:Card(elevation:2, child:ListTile(title :Text('$name' ) ) //tite
          ),//c@rd
) ;
  } 
}
